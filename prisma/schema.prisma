model Likes {
  id        String  @id @default(cuid())
  project   Project @relation(fields: [projectId], references: [id])
  projectId String
  userId    String
}

model Dislikes {
  id        String  @id @default(cuid())
  project   Project @relation(fields: [projectId], references: [id])
  projectId String
  userId    String
}

model Interest {
  id      String @id @default(cuid())
  userId  String
  message String
}

model Project {
  id          String     @id @default(cuid())
  name        String
  description String
  body        String
  tags        String[]
  industry    String
  banner      String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  authorId    String
  likes       Likes[]
  dislikes    Dislikes[]
}
