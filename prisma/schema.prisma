model Likes {
  id        String  @id @default(cuid())
  project   Project @relation(fields: [projectId], references: [id])
  projectId String
  user      User    @relation(fields: [userId], references: [id])
  userId    String
}

model Dislikes {
  id        String  @id @default(cuid())
  project   Project @relation(fields: [projectId], references: [id])
  projectId String
  user      User    @relation(fields: [userId], references: [id])
  userId    String
}

model Interest {
  id      String @id @default(cuid())
  user    User   @relation(fields: [userId], references: [id])
  userId  String
  message String
}

model Project {
  id          String     @id @default(cuid())
  name        String
  description String
  body        String
  tags        String[]
  industry    String
  banner      String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  author      User       @relation(fields: [authorId], references: [id])
  authorId    String
  likes       Likes[]
  dislikes    Dislikes[]
}

model User {
  id          String     @id @default(cuid())
  name        String
  email       String     @unique
  password    String
  avatar      String
  createdAt   DateTime   @default(now())
  isBlocked   Boolean    @default(false)
  isActivated Boolean    @default(false)
  projects    Project[]
  likes       Likes[]
  dislikes    Dislikes[]
  interests   Interest[]
}
